{% extends 'base.html.twig' %}

{% block title %}Sondage{% endblock %}

{% block body %}
    <h1>Sondage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom :</th>
                <td>{{ sondage.nom }}</td>
            </tr>
            <tr>
                <th>Introduction :</th>
                <td>{{ sondage.introduction }}</td>
            </tr>
            <tr>
                <th>Visibilit2 :</th>
                <td>{{ sondage.visibilite ? 'Public' : 'Privé' }}</td>
            </tr>
            <tr>
                <th>Créé par :</th>
                <td>{{ sondage.administrateur.nom }}</td>
            </tr>
            <tr>
                <th>Le :</th>
                <td>{{ sondage.datecreation ? sondage.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sondage_index') }}">back to list</a>

    <a href="{{ path('app_sondage_edit', {'id': sondage.id}) }}">edit</a>

{% endblock %}
